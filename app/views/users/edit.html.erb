<h1>Editar perfil</h1>

<%= form_for @user, html: { multipart: true } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> Usuario no pudo ser actualizado:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!--   <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control" %>
  </div> -->

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: "form-control" %>
    <span>Si modificas este campo, este email será tu nuevo usuario para ingresar a tu cuenta</span>
  </div>

  <div class="form-group">
    <%= f.label :name, "Nombre" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Apellidos" %><br>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address, "Dirección" %><br>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, "Teléfono" %><br>
    <%= f.text_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :mobile_phone, "Celular" %><br>
    <%= f.text_field :mobile_phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
  </div>
<% end %>
