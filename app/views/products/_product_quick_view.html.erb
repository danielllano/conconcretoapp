<div id="product-quick-view-modal" tabindex="-1" role="dialog" aria-hidden="false" class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" data-dismiss="modal" aria-hidden="true" class="close">×</button>
        <div class="row quick-view product-main">
          <div class="col-sm-6">

            <div class="tab-content">
              <div role="tabpanel" class="quick-view-main-image tab-pane active" id="image1"><%= image_tag @product.image1.url(:medium), class: "img-responsive" %></div>
              <div role="tabpanel" class="quick-view-main-image tab-pane" id="image2"><%= image_tag @product.image2.url(:medium), class: "img-responsive" %></div>
              <div role="tabpanel" class="quick-view-main-image tab-pane" id="image3"><%= image_tag @product.image3.url(:medium), class: "img-responsive" %></div>
            </div>

            <div class="ribbon ribbon-quick-view sale">
              <div class="theribbon">SALE</div>
              <div class="ribbon-background"></div>
            </div>
            <div class="ribbon ribbon-quick-view new">
              <div class="theribbon">NEW</div>
              <div class="ribbon-background"></div>
            </div>


            <div class="row thumbs nav nav-tabs" role="tablist">
              <div class="col-xs-4 active" role="presentation"><a href="#image1" aria-controls="image1" role="tab" data-toggle="tab" class="thumb"><%= image_tag @product.image1.url(:small), class: "img-responsive" %></a></div>
              <% if !@product.image2.blank? %>
                <div class="col-xs-4 active" role="presentation"><a href="#image2" aria-controls="image2" role="tab" data-toggle="tab" class="thumb"><%= image_tag @product.image2.url(:small), class: "img-responsive" %></a></div>
              <% end %>
              <% if !@product.image3.blank? %>
                <div class="col-xs-4 active" role="presentation"><a href="#image3" aria-controls="image3" role="tab" data-toggle="tab" class="thumb"><%= image_tag @product.image3.url(:small), class: "img-responsive" %></a></div>
              <% end %>
            </div>


          </div>
          <div class="col-sm-6">
            <h2 class="product__heading"><%= @product.name %></h2>
            <p class="text-muted text-small text-center"><%= @product.description %></p>
            <div class="box">
              <form>
                <p class="price"><%="#{@product.points} puntos"%></p>
                <div class="row">
                  <div class="col-md-6 col-md-offset-3">
                    <div class="form-group">
                      <label for="modal_quantity">Quantity</label>
                      <input type="number" value="1" id="modal_quantity" class="form-control">
                    </div>
                  </div>
                </div>
                <p class="text-center">
                  <button type="submit" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>&nbsp;Añadir al carrito</button>
                </p>
              </form>
            </div>
            <!-- <div class="quick-view-social">
              <h4>Show it to your friends</h4>
              <p><a href="#" data-animate-hover="pulse" class="external facebook"><i class="fa fa-facebook"></i></a><a href="#" data-animate-hover="pulse" class="external gplus"><i class="fa fa-google-plus"></i></a><a href="#" data-animate-hover="pulse" class="external twitter"><i class="fa fa-twitter"></i></a><a href="#" data-animate-hover="pulse" class="email"><i class="fa fa-envelope"></i></a></p>
            </div> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
