<div class="container">
  <%= form_for @product, url: products_path, html: {multipart: true} do |f| %>
    <% if @product.errors.any? %>
      <div class="alert alert-danger" role="alert" id="error_explanation">
        <h4><%= pluralize(@product.errors.count, "error") %> prohibited
          this product from being saved:</h4>
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class:"form-label" %>
      <%= f.text_field :name, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description, class:"form-label" %><br>
      <%= f.text_field :description, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :points, class:"form-label" %><br>
      <%= f.text_field :points, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :available_qty, class:"form-label" %><br>
      <%= f.text_field :available_qty, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image1, class:"form-label" %><br>
      <%= f.file_field :image1 %>
    </div>

    <div class="form-group">
      <%= f.label :image2, class:"form-label" %><br>
      <%= f.file_field :image2 %>
    </div>

    <div class="form-group">
      <%= f.label :image3, class:"form-label" %><br>
      <%= f.file_field :image3 %>
    </div>

    <div class="actions">
      <%= f.submit 'Guardar', class: 'btn btn-primary' %>
    </div>

  <% end %>
</div>